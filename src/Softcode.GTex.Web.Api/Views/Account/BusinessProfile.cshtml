@using Softcode.GTex.Api.Controllers;

@model LoginBusinessProfileViewModel
@{
    Layout = "_LandingLayout";
}

<div class="login-page">
    <section>
        <div class="container vertical-center">
            <div class="row justify-content-center">
                <div class="col-sm-8 col-lg-5">
                    <div class="u-shadow-v15 g-bg-white rounded g-py-40 g-px-30">
                        <header class="text-center mb-4">
                            @*<h2 class="h2 g-color-black g-font-weight-600">Login</h2>*@
                            <img src="~/images/logo2Large.png" width="200" />
                        </header>
                        <form asp-route="ForgotPassword" class="g-py-15">
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="ReturnUrl" />
                            <fieldset>
                                <div class="mb-4">
                                    <div class="col-xs-12">
                                        @Html.DropDownListFor(m => m.BusinussProfileId, Model.BusinussProfileOptions, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="g-mb-35">
                                    <div class="col-xs-12">

                                        @Html.Partial("_ValidationSummary")
                                    </div>
                                </div>
                                <div class="mb-5 form-group">
                                    <button class="btn btn-md btn-block u-btn-blue g-py-13" name="button" value="send-link">Log In</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>