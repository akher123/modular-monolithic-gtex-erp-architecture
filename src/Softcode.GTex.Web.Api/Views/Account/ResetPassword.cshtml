@using Softcode.GTex.Api.Models;

@model ResetPasswordViewModel
@{
    Layout = "_LandingLayout";
}

<div class="login-page">
    <section>
        <div class="container vertical-center">
            <div class="row justify-content-center">
                <div class="col-sm-8 col-lg-5">
                    <div class="u-shadow-v15 g-bg-white rounded g-py-40 g-px-30">
                        <header class="text-center mb-4">
                            @*<h2 class="h2 g-color-black g-font-weight-600">Login</h2>*@
                            <img src="~/images/logo2Large.png" width="200" />
                        </header>
                        <form asp-route="Login" class="g-py-15">
                            <input type="hidden" asp-for="Token" />
                            <fieldset>
                                <div class="mb-4">
                                    <div class="input-group form-group g-brd-primary--focus">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-finance-067 u-line-icon-pro"></i></span>
                                        </div>
                                        <input class="form-control g-color-black g-bg-white g-brd-gray-light-v4 g-py-15 g-px-15" type="password" placeholder="Password" data-val-required="Password is required." asp-for="Password" autocomplete="off">
                                    </div>
                                </div>
                                <div class="g-mb-35">
                                    <div class="input-group form-group g-brd-primary--focus mb-4">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-media-094 u-line-icon-pro"></i></span>
                                        </div>
                                        <input class="form-control g-color-black g-bg-white g-brd-gray-light-v4 g-py-15 g-px-15" type="password" placeholder="Confirm password" data-val-required="Confirm Password is required." asp-for="ConfirmPassword" autocomplete="off">
                                    </div>
                                </div>
                                <div class="g-mb-35">
                                    <div class="col-xs-12">
                                        @Html.Partial("_ValidationSummary")
                                    </div>
                                </div>
                                <div class="mb-5 form-group">
                                    <button class="btn btn-md btn-block u-btn-blue g-py-13" name="button" value="login">Reset Password</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>